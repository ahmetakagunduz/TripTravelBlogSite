@using TravelTripProje.Models.Classes
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" style="width:300px; height:150px;" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 80)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Gör >></span></a></p>
        </div>
    </div>
}